#session
  .bg-white.py-8.px-4.shadow.sm:rounded-lg.sm:px-10.w-96.mx-auto.mt-18
    %form.space-y-6{:action => session_path, :method => "POST"}
      %div
        %label.block.text-sm.font-medium.text-gray-700.text-center{:for => "email"} Choose a user name:
        .mt-1
          %input#user_name.appearance-none.block.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.placeholder-gray-400.focus:outline-none.focus:ring-indigo-500.focus:border-indigo-500.sm:text-sm{:autocomplete => "email", :name => "name", :required => "", :type => "text"}/
      %button.w-full.flex.justify-center.py-2.px-4.border.border-transparent.rounded-md.shadow-sm.text-sm.font-medium.text-white.bg-indigo-600.hover:bg-indigo-700.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-indigo-500{:type => "submit"} Go!
