%li.col-span-1.flex.shadow-sm.rounded-md
  .flex-shrink-0.flex.items-center.justify-center.w-24.bg-pink-600.text-white.text-sm.font-medium.rounded-l-md Lobby
  .flex-1.flex.items-center.justify-between.border-t.border-r.border-b.border-gray-200.bg-white.rounded-r-md.truncate
    .flex-1.px-4.py-2.text-sm.truncate
      %a.text-gray-900.font-medium.hover:text-gray-600{:href => "#"}
        = game_session.name || "Game Name"
      %p.text-gray-500
        = "16 Players"
    .flex-shrink-0.pr-2
      = link_to game_session_path(game_session) do
        %button.w-8.h-8.bg-white.inline-flex.items-center.justify-center.text-gray-400.rounded-full.bg-transparent.hover:text-gray-500.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-indigo-500{:type => "button"}
          %svg.h-6.w-6{:fill => "none", :stroke => "currentColor", "stroke-width" => "2", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
            %path{:d => "M13 5l7 7-7 7M5 5l7 7-7 7", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
