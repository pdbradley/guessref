    =link_to "New Game", new_game_session_path
%div
  %h2.text-gray-500.font-medium.uppercase.tracking-wide.text-center Active Games
  %ul#game_sessions.mt-3.grid.grid-cols-1.gap-3.sm:gap-6.sm:grid-cols-2.lg:grid-cols-4{:role => "list"}
    - @game_sessions.each do |game_session|
      -# = render partial: 'game_session_li', locals: {game_session: game_session}
      = render GameSessionBadgeComponent.new(game_session: game_session)

    %li.col-span-1.flex.shadow-sm.rounded-md
      .flex-shrink-0.flex.items-center.justify-center.w-16.bg-pink-600.text-white.text-sm.font-medium.rounded-l-md Lobby
      .flex-1.flex.items-center.justify-between.border-t.border-r.border-b.border-gray-200.bg-white.rounded-r-md.truncate
        .flex-1.px-4.py-2.text-sm.truncate
          %a.text-gray-900.font-medium.hover:text-gray-600{:href => "#"} Graph API
          %p.text-gray-500 16 Players
        .flex-shrink-0.pr-2
          %button.w-8.h-8.bg-white.inline-flex.items-center.justify-center.text-gray-400.rounded-full.bg-transparent.hover:text-gray-500.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-indigo-500{:type => "button"}
